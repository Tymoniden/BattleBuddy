@using BattleBuddy.WebApp.StateContainers
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject GameScore GameScore

<PageTitle>BattleBuddy</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main style="margin-bottom: 47px">
        <article class="content px-4">
            @Body
        </article>
    </main>
    
    <div class="fixed-bottom d-flex justify-content-around align-items-center" style="height: 42px; background-color: white; padding-top: 2px;">
        <button title="armyList" class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/armyList"))">
            <span class="oi oi-justify-left" aria-hidden="true"></span>
        </button>
        
        <button title="score" class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/score"))">
            @($"{GameScore.TotalPlayerA} : {GameScore.TotalPlayerB}")
        </button>
        
        <button title="stratagems" class="btn btn-primary" @onclick="@(() => NavigationManager.NavigateTo("/stratagems"))">
            <span class="oi oi-layers" aria-hidden="true"></span>
        </button>
    </div>
</div>

@code
{
    protected override void OnInitialized()
    {
        GameScore.OnChange += UpdateUi;
    }
    
    public void Dispose()
    {
        GameScore.OnChange -= UpdateUi;
    }

    void UpdateUi(object? sender, EventArgs eventArgs)
    {
        InvokeAsync(StateHasChanged);
    }
}